<?xml version="1.0" encoding="UTF-8"?>

<addons>

<addon id="plugin.audio.rdio" version="1.7.0" name="Rdio" provider-name="Charles Blaxland (https://github.com/ampedandwired/rdio-xbmc)">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.parsedom" version="0.9.2"/>
    <import addon="script.module.t0mm0.common" version="1.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="rdioplugin.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Play your Rdio collections and playlists through XBMC</summary>
    <description>
      Rdio is a subscription music service which allows you to manage your music collection and playlists, play and download them to various devices and discover new music through your friends and followers. This addon allows you to play music from Rdio through XBMC.
    </description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.ampedandwired" name="Ampedandwired's XBMC Addons" version="1.0.0" provider-name="ampedandwired">
  <extension point="xbmc.addon.repository" name="Ampedandwired's XBMC Addon Repository">
    <datadir zip="true">https://github.com/ampedandwired/ampedandwired-xbmc-repo/raw/master/repo/</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Install ampedandwired's Addons</summary>
    <description>Download and install addons by ampedandwired</description>
    <platform>all</platform>
  </extension>
</addon>

</addons>

